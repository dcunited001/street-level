<% content_for :body_content_title do %>
  <%= @video.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @video.name %>
    </p>
  </section>
  <section>
    <h1>Desc</h1>
    <p>
      <%=raw @video.desc %>
    </p>
  </section>
  <section>
    <h1>Url</h1>
    <p>
      <%=raw @video.url %>
    </p>
  </section>
  <section>
    <h1>User</h1>
    <p>
      <%=raw @video.user_id %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="videos">
      <% @videos.each do |video| %>
        <li>
          <%= link_to video.name, video_path(video) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
